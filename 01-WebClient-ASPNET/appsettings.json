{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "BaseUrl": "http://localhost:5000/api/",
    "Timeout": 30
  },
  "Authentication": {
    "CookieName": "HelpdeskAuth",
    "ExpirationMinutes": 480,
    "LoginPath": "/Account/Login"
  }
}
