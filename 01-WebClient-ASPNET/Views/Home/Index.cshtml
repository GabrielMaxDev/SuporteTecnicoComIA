@{
    ViewData["Title"] = "Bem-vindo";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-3 fw-bold">Sistema de Suporte com <span class="text-primary">IA</span></h1>
            <p class="lead">Resolva seus problemas técnicos de forma rápida e inteligente com sugestões automáticas.</p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">
                    <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <img src="https://via.placeholder.com/500x400/0d6efd/ffffff?text=Helpdesk+IA" class="img-fluid rounded shadow" alt="Helpdesk">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-robot fa-3x text-primary mb-3"></i>
                    <h4>IA Inteligente</h4>
                    <p>Sugestões automáticas para resolver seus problemas mais rápido</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-comments fa-3x text-success mb-3"></i>
                    <h4>Comunicação Rápida</h4>
                    <p>Chat integrado entre cliente e técnico</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-chart-line fa-3x text-warning mb-3"></i>
                    <h4>Dashboard Completo</h4>
                    <p>Acompanhe todos os seus chamados em tempo real</p>
                </div>
            </div>
        </div>
    </div>
</div>
